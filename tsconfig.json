{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "ESNext",
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
    ],
    "types": ["p5"],
  },
  
  "exclude": [
    "node_modules",
  ]
}
